<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/assign/feedback/recitannotation/db" VERSION="2025030500" COMMENT="XMLDB file for Moodle mod/assign/feedback/recitannotation"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="assignfeedback_recitannotation" COMMENT="Stores info about the teacher annotations on students assignment.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="submission" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="ownerid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="annotation" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="The annotation text"/>
        <FIELD NAME="occurrences" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT=""/>
        <FIELD NAME="lastupdate" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="Unique id for this feedback value."/>
        <KEY NAME="uniquesubmission" TYPE="unique" FIELDS="submission" />
        <KEY NAME="fksubmission" TYPE="foreign" FIELDS="submission" REFTABLE="assign_submission" REFFIELDS="id" COMMENT="The assignment submission this feedback relates to."/>
        <KEY NAME="ownerid" TYPE="foreign" FIELDS="ownerid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="assignfeedback_recitannot_crit" COMMENT="Stores the list of criteria">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="assignment" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="name" TYPE="char" LENGTH="25" NOTNULL="false" SEQUENCE="false" />
        <FIELD NAME="description" TYPE="char" LENGTH="50" NOTNULL="false" SEQUENCE="false" />
        <FIELD NAME="backgroundcolor" TYPE="char" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="Unique id for this feedback value."/>
        <KEY NAME="fkassignment" TYPE="foreign" FIELDS="assignment" REFTABLE="assign" REFFIELDS="id" />
        <KEY NAME="nameunique" TYPE="unique" FIELDS="name,assignment" COMMENT="Unique criterion name by assignment."/>
      </KEYS>
    </TABLE>
    <TABLE NAME="assignfeedback_recitannot_comment" COMMENT="Stores the list of comments by criteria">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="criterionid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" />
        <FIELD NAME="comment" TYPE="char" LENGTH="500" NOTNULL="false" SEQUENCE="false" />
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="Unique id"/>
        <KEY NAME="fkcriterionid" TYPE="foreign" FIELDS="criterionid" REFTABLE="assignfeedback_recitannot_crit" REFFIELDS="id" />
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
